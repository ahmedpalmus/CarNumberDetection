<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuestionDetails"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/logo"
        android:textSize="20dp"
        android:textColor="#fff"
        android:background="@drawable/gradient_blue"
        android:gravity="center"
        android:fontFamily="@font/timesbd"
        android:padding="10dp"/>
    <TextView
        android:id="@+id/s_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="By: user name"
        android:padding="10dp"
        android:textColor="#000"
        android:textSize="18dp"
        />
    <TextView
        android:id="@+id/s_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Date: 25/07/2022"
        android:textColor="#000"
        android:background="#F4F4F4"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/s_det"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Question details"
        android:padding="10dp"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="18dp"
        />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#CDF6F5F5"
        android:elevation="5dp"
        android:orientation="horizontal">

    </LinearLayout>

    <EditText
        android:id="@+id/s_resp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:lines="4"
        android:textColor="#222121"
        android:hint="No response from the admin"
        android:textSize="17dp"
        android:layout_marginBottom="10dp"
        android:enabled="false"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/linear17"
        android:visibility="gone"
        android:paddingVertical="10dp">

        <Button
            android:onClick="SuppDetClick"
            android:id="@+id/s_save"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:textSize="18dp"
            android:background="@drawable/box_7"
            android:textColor="@color/white"
            android:layout_marginHorizontal="10dp"
            android:text="@string/save"/>
        <Button
            android:onClick="SuppDetClick"
            android:id="@+id/s_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:textSize="18dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/box_5"
            android:textColor="@color/white"
            android:text="@string/cancel"/>
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewReport"
    android:orientation="vertical"
    android:background="@drawable/box_1"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send Report"
        android:textSize="25dp"
        android:textColor="#fff"
        android:background="@drawable/gradient_blue"
        android:gravity="center"
        android:fontFamily="@font/timesbd"
        android:padding="10dp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginHorizontal="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/box_2"
                    android:padding="10dp"
                    android:text="Plate Number"
                    android:textColor="#000"
                    android:textSize="18dp" />
                <TextView
                    android:id="@+id/plate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="FF45"
                    android:background="#E1DDDD"
                    android:textColor="#000"
                    android:textSize="18dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginHorizontal="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#E1F5FE"
                    android:padding="10dp"
                    android:text="Details"
                    android:textColor="#000"
                    android:textSize="18dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="1dp"
                android:layout_marginHorizontal="10dp"
                android:orientation="horizontal"/>
            <EditText
                android:layout_marginHorizontal="10dp"
                android:id="@+id/help_details"
                android:layout_width="match_parent"
                android:lines="8"
                android:gravity="top"
                android:layout_height="wrap_content"
                android:hint="Enter the details"
                android:padding="10dp"
                android:textSize="18dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:layout_marginHorizontal="10dp"
                android:paddingBottom="5dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/help_image"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:padding="10dp"
                    android:textColor="#000"
                    android:textSize="18dp"
                    android:text="Attach Image"
                    android:textAllCaps="false"
                    android:drawableLeft="@drawable/addimage"
                    android:background="@drawable/gradient_light"
                    />

            </LinearLayout>
            <ImageView
                android:padding="10dp"
                android:id="@+id/add_pimage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/scancar"
                android:maxHeight="400dp"
                />
            <Button
                android:id="@+id/help_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginHorizontal="10dp"
                android:textColor="#000"
                android:textSize="18dp"
                android:text="Attach location"
                android:textAllCaps="false"
                android:background="@drawable/gradient_light"
                android:drawableLeft="@drawable/location"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
android:orientation="vertical"
                >
                <Button
                    android:id="@+id/help_save"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/save"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:textSize="18dp"
                    android:padding="10dp"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/box_7"
                    android:layout_marginHorizontal="10dp"/>

                <Button
                    android:id="@+id/help_cancel"
                    android:layout_marginHorizontal="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/cancel"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:textSize="18dp"
                    android:padding="10dp"
                    android:background="@drawable/box_5"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
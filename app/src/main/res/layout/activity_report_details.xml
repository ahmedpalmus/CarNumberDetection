<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ReportDetails">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_blue"
                android:elevation="5dp"
                android:gravity="center"
                android:text="Report Details"
                android:padding="5dp"
                android:textColor="#fff"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/post_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="By:Mohammed Mohammed"
                    android:background="#CDF6F5F5"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/post_add"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="20/05/2023"
                    android:fontFamily="@font/timesbd"
                    android:textAlignment="center"
                    android:textColor="#555353"
                    android:textSize="18dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="5dp"
                android:padding="5dp"
                android:background="@drawable/box_3"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Car No"
                    android:textAlignment="textStart"
                    android:textColor="#000"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/car_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:padding="10dp"
                    android:text="1919EBA"
                    android:textColor="#051573"
                    android:textStyle="bold"
                    android:textSize="18dp" />
                <Button
                    android:id="@+id/find_car"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:padding="10dp"
                    android:text="View Details"
                    android:textAllCaps="false"
                    android:textColor="#051573"
                    android:background="@drawable/gradient_light"
                    android:textSize="18dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/post_det"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/box_3"
                android:text="The Details of the report"
                android:lines="3"
                android:textSize="18dp" />
            <Button
                android:id="@+id/find_map"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:padding="10dp"
                android:text="View Location"
                android:textAllCaps="false"
                android:textColor="#051573"
                android:background="@drawable/gradient_light"
                android:drawableLeft="@drawable/location"
                android:textSize="18dp" />
            <androidx.cardview.widget.CardView
                android:id="@+id/image_palce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:elevation="10dp"
                android:padding="5dp"
                app:cardCornerRadius="8dp">

                <ImageView
                    android:id="@+id/roundedImageView"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:scaleType="fitCenter"
                    android:background="@color/white"
                    android:src="@drawable/scancar" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#CDF6F5F5"
                    android:padding="10dp"
                    android:text="The Response:"
                    android:textAlignment="textStart"
                    android:textColor="#000"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/ur_response"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter your response"
                    android:lines="3" />

                <Button
                    android:id="@+id/add_response"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/box_7"
                    android:drawableLeft="@drawable/comment1"
                    android:paddingHorizontal="10dp"
                    android:text="Send"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="18dp" />
            </LinearLayout>

            <Button
                android:id="@+id/cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/box_5"
                android:paddingHorizontal="10dp"
                android:text="@string/cancel"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18dp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>